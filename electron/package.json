{
  "name": "icore",
  "version": "0.0.9",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac dmg",
    "build_signed": "CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder --mac dmg"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.icore.app",
    "productName": "iCore",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "assets/icon.icns",
      "assets/settings.json"
    ],
    "extraFiles": [
      {
        "from": "assets/dist",
        "to": "app/assets/dist"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "type": "distribution"
    },
    "dmg": {
      "title": "iCore",
      "background": "background.png",
      "contents": [
        {
          "x": 150,
          "y": 90,
          "type": "file"
        },
        {
          "x": 150,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
